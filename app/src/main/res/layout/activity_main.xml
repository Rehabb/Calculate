<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.mycal.rehab.calculate.MainActivity">


   <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="0"
       android:id="@+id/txtcal"
       android:paddingBottom="20dp"
       android:paddingTop="0dp"
       android:layout_marginBottom="10dp"
       />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/no1"
        android:layout_below="@+id/txtcal"
        android:textColor="#fdfbfb"
        android:background="#0f0ff7"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/no2"
        android:layout_toRightOf="@+id/no1"
        android:layout_below="@+id/txtcal"
        android:textColor="#fdfbfb"
        android:background="#0f0ff7"
        android:textStyle="bold"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/no3"
        android:layout_toRightOf="@+id/no2"
        android:layout_below="@+id/txtcal"
        android:textColor="#fdfbfb"
        android:background="#0f0ff7"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/no4"
        android:layout_below="@+id/no1"
        android:textColor="#fdfbfb"
        android:background="#0f0ff7"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/no5"
        android:layout_toRightOf="@+id/no4"
        android:layout_below="@+id/no2"
        android:textColor="#fdfbfb"
        android:background="#0f0ff7"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/no6"
        android:layout_toRightOf="@+id/no5"
        android:layout_below="@id/no3"
        android:textColor="#fdfbfb"
        android:background="#0f0ff7"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/no7"
        android:layout_below="@+id/no4"
        android:textColor="#fdfbfb"
        android:background="#0f0ff7"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/no8"
        android:layout_below="@id/no5"
        android:layout_toRightOf="@id/no7"
        android:textColor="#fdfbfb"
        android:background="#0f0ff7"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/no9"
        android:layout_toRightOf="@+id/no8"
        android:layout_below="@+id/no6"
        android:textColor="#fdfbfb"
        android:background="#0f0ff7"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:id="@+id/nodot"
        android:layout_below="@id/no7"
        android:textColor="#fdfbfb"
        android:background="#ba5dec"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/no0"
        android:layout_below="@id/no8"
        android:layout_toRightOf="@+id/nodot"
        android:textColor="#fdfbfb"
        android:background="#0f0ff7"
        android:textStyle="bold"

        />

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/sum"
        android:layout_toRightOf="@id/no3"
        android:layout_below="@+id/txtcal"
        android:textColor="#fdfbfb"
        android:background="#199311"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/sub"
        android:layout_toRightOf="@id/no6"
        android:layout_below="@+id/sum"
        android:textColor="#fdfbfb"
        android:background="#38d61d"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/mul"
        android:layout_toRightOf="@id/no9"
        android:layout_below="@+id/sub"
        android:textColor="#fdfbfb"
        android:background="#3ee9e3"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/equal"
        android:layout_toRightOf="@id/no0"
        android:layout_below="@+id/no9"
        android:textColor="#fdfbfb"
        android:background="#f73d0f"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/division"
        android:layout_toRightOf="@id/equal"
        android:layout_below="@+id/mul"
        android:textColor="#fdfbfb"
        android:background="#f7b50f"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="c"
        android:id="@+id/clear"
        android:layout_below="@+id/no0"
        android:textColor="#fdfbfb"
        android:background="#584f55"
        android:textStyle="bold"
        />



</RelativeLayout>
